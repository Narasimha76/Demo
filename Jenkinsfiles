pipeline
{
  agent any
  stages
  {
    stage("program")
    {
        when{
            beforeAgent true
            anyOf{
                branch "main"
            }
        }
      steps
      {
        echo "hi"
      }
    }
    stage("message")
    {
      steps
      {
        echo "executed"
      }
    }
  }
}
