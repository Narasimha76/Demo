pipeline
{
  agent any
  stages
  {
    stage("program")
    {
      when
      {
        expression
        {
          BRANCH_NAME == 'main'
        }
      }
      steps
      {
        echo "hi"
      }
    }
    stage("message")
    {
      steps
      {
        echo "executed"
      }
    }
  }
}
